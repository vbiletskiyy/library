<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm" >
    <h5 class="my-0 mr-md-auto font-weigth-bold">Library</h5>
  <nav class="my-2 mr-md-0 mr-md-3">
    <span class="p-2 text-dark"><%= link_to "Log as admin", user_session_path	 %></span>
  </nav>
</div>

  <h1>Choose a category</h1>   
  <%@category.each do |category|%>
  <h2><%= link_to category.name, category %></h2>
  <%end%>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Title of Book</h1>   
    </div>
      <div class="col-sm">
      <h1>Image</h1>   
    </div>
  </div>

  <% @book.each do |book| %>
    <div class="row ">
      <div class="col-sm">
        <h2><%= book.title %></h2>
      </div>
      <div class='col-sm '>
        <%= image_tag(book.image, class: "img-fluid m-3 px-3" )%>
      </div>
    </div>
  <%end%>
</div>
