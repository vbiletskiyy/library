
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm" >
    <h5 class="my-0 mr-md-auto font-weigth-bold">Library</h5>
  <nav class="my-2 mr-md-0 mr-md-3">
    <span class="p-2 text-dark"><%= link_to "Log as admin", user_session_path	 %></span>
    <span class="p-2 text-dark"><%= link_to "Back", root_path	 %></span>
  </nav>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Title of category</h1>   
    </div>
    <div class="col-sm">
      <h1>Book</h1>   
    </div>
    <div class="col-sm">
      <h1>Author</h1>   
    </div>
     <div class="col-sm">
      <h1>Image</h1>   
    </div>
  </div>
  <% @category.books.each do |book| %>
  <div class="row justify-content-center">
    <div class="col-sm">
    <%= @category.name %>
    </div>
    <div class="col-sm">
      <h2><%= book.title %></h2>
    </div>
    <div class="col-sm">
        <% book.authors.each do |author| %>
        <h2><%= author.name %></h2>
        <% end %>
    </div>
    <div class="col-sm">
      <%= image_tag(book.image, class: "img-fluid m-3 px-3" )%>
    </div>
  </div>
  <% end %> 
</div> 

